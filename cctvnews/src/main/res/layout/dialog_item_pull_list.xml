<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp">
        <TextView
            android:id="@+id/dialog_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="央视网友614428555"
            android:textSize="15sp"
            android:textColor="#4799FF" />
        <TextView
            android:id="@+id/dialog_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大家哈珀，你们好牛，骄傲里加的。"
            android:textSize="18sp"
            android:layout_below="@id/dialog_item_name_tv"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/dialog_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个小时前"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:textColor="#C0C0C0"/>
    </RelativeLayout>

</RelativeLayout>