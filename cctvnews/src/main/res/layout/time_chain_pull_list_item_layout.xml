<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/pull_list_item_rl1"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:background="@color/colorTextItem">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_timeline_line" />

        <TextView
            android:id="@+id/pull_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/colorTextItem"
            android:padding="5dp"
            android:text="58分钟前"
            android:textColor="@color/black"
            android:textSize="8sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pull_list_item_rl2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/pull_list_item_rl1"
        android:background="@color/colorTextItem"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pull_list_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="10dp"
                android:text="伊拉克首都北部发生爆炸造成至少25人死亡"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pull_list_item_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
