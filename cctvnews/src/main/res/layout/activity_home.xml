<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cctvnews.www.ui.HomeActivity">
    <!--TODO 这里画首页-->

    <RadioGroup
        android:id="@+id/rg_all"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_news_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/slt_rb_news"
            android:gravity="center"
            android:text="新闻"
            android:textColor="@drawable/slt_text_bottom"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/home_timechain_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/slt_rb_timechain"
            android:gravity="center"
            android:text="时间链"
            android:textColor="@drawable/slt_text_bottom"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/home_tvplus_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/slt_rb_tvplus"
            android:gravity="center"
            android:text="电视+"
            android:textColor="@drawable/slt_text_bottom"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/home_discover_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/slt_rb_discover"
            android:gravity="center"
            android:text="发现"
            android:textColor="@drawable/slt_text_bottom"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/home_me_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/slt_rb_me"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/slt_text_bottom"
            android:textSize="12sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/home_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/rg_all"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@+id/home_framrlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_line" />
</RelativeLayout>
